<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/text"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.75"/>
    <Button
            android:text="change"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:onClick="ChangeButtononClick" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/text"/>
    <Switch
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/switch1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toTopOf="@+id/text"
            android:textOn="picture1" android:textOff="picture2"
            tools:text="picture1" android:text="picture1"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/download"
            android:id="@+id/imageView1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="false" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/seekBar"/>
    <SeekBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/switch1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:max="100" android:progress="100"/>

</androidx.constraintlayout.widget.ConstraintLayout>