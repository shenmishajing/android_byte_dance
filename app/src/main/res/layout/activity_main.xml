<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/img_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chapter_1 Image_view" />

    <Button
        android:id="@+id/recycle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chapter_2 Recycle_view" />

    <Button
        android:id="@+id/animation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chapter_3 Animation" />

    <Button
        android:id="@+id/fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chapter_3 Fragment" />

    <Button
        android:id="@+id/lottie_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chapter_3 Lottie" />

    <Button
        android:id="@+id/clock_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chapter_4 Clock" />

</LinearLayout>